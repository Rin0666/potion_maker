<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:src="@drawable/shelf">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp">
        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <ImageView
                android:id="@+id/shelfIv"
                android:layout_width="400dp"
                android:layout_height="175dp"
                android:adjustViewBounds="true"
                android:background="@drawable/shelf"
                android:contentDescription="shelf" />
            <ImageView
                android:id="@+id/potionIv"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginStart="70dp"
                android:layout_marginTop="50dp"
                android:adjustViewBounds="true"
                android:background="@drawable/abottle"
                android:contentDescription="potion"
                android:layout_alignStart="@id/shelfIv"/>
            <TextView
                android:id="@+id/potionNameTv"
                android:layout_width="210dp"
                android:layout_height="50dp"
                android:layout_marginEnd="40dp"
                android:layout_marginTop="80dp"
                android:text="TESTTESTTEST"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_alignEnd="@id/shelfIv"/>
        </RelativeLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>